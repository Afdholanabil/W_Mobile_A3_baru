<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/white"
            android:shadowDy="100"
            app:cardCornerRadius="15dp"
            android:padding="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    >
                        <ImageView
                            android:id="@+id/imgKaryawan"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/photo_library_48px"
                            tools:ignore="MissingConstraints"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:scaleType="fitXY">

                        </ImageView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Username : "
                                    android:textSize="20sp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textColor="@color/black"
                                    />
                                <TextView
                                    android:id="@+id/txt_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:text="AbdulRahmat1"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txt_pass"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                />
                            <TextView
                                android:id="@+id/txt_kedudukan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nama : "
                                    android:textSize="20sp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textColor="@color/black"
                                    />
                                <TextView

                                    android:id="@+id/txt_nama"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Abdul Rahmat"
                                    android:maxLines="1"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No Handphone : "
                                    android:textSize="18sp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textColor="@color/black"/>
                                <TextView
                                    android:id="@+id/txt_telp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="081212112121"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="@color/black"/>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                >
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/br_edit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/green1"
                                    app:cardCornerRadius="7dp"
                                    >
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_baseline_edit_24_white"
                                        android:padding="5dp">
                                    </ImageView>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/br_delete"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/green1"
                                    app:cardCornerRadius="7dp"
                                    android:layout_marginHorizontal="10dp"
                                    >
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_baseline_delete_24"
                                        android:padding="5dp">

                                    </ImageView>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>