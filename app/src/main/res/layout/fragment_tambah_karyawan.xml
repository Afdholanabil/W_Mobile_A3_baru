<?xml version="1.0" encoding="utf-8"?>
<layout >
    <data>
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="20dp"
        tools:context=".Fragment.TambahKaryawanFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"
                tools:ignore="MissingConstraints">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/crd1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="MissingConstraints">
                        <LinearLayout
                            android:id="@+id/linear2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_baseline_arrow_back_24"/>
                            <TextView
                                android:id="@+id/txt_kembali"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kembali"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tambah Akun Karyawan"
                        android:textSize="17dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        tools:ignore="MissingConstraints"
                        app:layout_constraintTop_toBottomOf="@+id/crd1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="30dp"
                        android:gravity="center"/>
                    <RelativeLayout
                        android:id="@+id/rlv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/txt1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="15dp"
                        tools:ignore="MissingConstraints">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/crd3"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:backgroundTint="@color/grey1"
                                app:cardCornerRadius="50dp"
                                tools:ignore="MissingConstraints"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"

                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="35dp"
                                    android:src="@drawable/add_a_photo_48px"/>
                            </androidx.cardview.widget.CardView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/linear3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/rlv1"
                        android:layout_marginTop="20dp"
                        tools:ignore="MissingConstraints"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp">
                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/grey1"
                            android:layout_marginVertical="5dp"
                            app:cardCornerRadius="10dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Masukan Username"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="15sp"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="7dp"
                                android:background="@null"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/txt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Password"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/grey1"
                            android:layout_marginVertical="5dp"
                            app:cardCornerRadius="10dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Masukan Pssword"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="15sp"
                                android:inputType="textPassword"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="7dp"
                                android:background="@null"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/txt4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama "
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/grey1"
                            android:layout_marginVertical="5dp"
                            app:cardCornerRadius="10dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Masukan Nama"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="15sp"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="7dp"
                                android:background="@null"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/txt5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No. Telepon"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/grey1"
                            android:layout_marginVertical="5dp"
                            app:cardCornerRadius="10dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPhonetic"
                                android:hint="Masukan No. Telepon"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="15sp"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="7dp"
                                android:background="@null"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/green1"
                        app:layout_constraintTop_toBottomOf="@+id/linear3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginVertical="30dp"
                        app:cardCornerRadius="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Simpan"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:paddingVertical="7dp"
                            android:paddingHorizontal="50dp"/>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</layout>
