<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        tools:context=".TambahBarangActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/crd1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="MissingConstraints">
                        <LinearLayout
                            android:id="@+id/linear2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_baseline_arrow_back_24"/>
                            <TextView
                                android:id="@+id/btn_back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kembali"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tambah Data Barang"
                        android:textSize="17dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        tools:ignore="MissingConstraints"
                        app:layout_constraintTop_toBottomOf="@+id/crd1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="30dp"
                        android:gravity="center"/>
                    <RelativeLayout
                        android:id="@+id/rlv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/txt1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="15dp"
                        tools:ignore="MissingConstraints">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/crd3"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:backgroundTint="@color/grey1"
                                app:cardCornerRadius="50dp"
                                tools:ignore="MissingConstraints"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"

                                >
                                <ImageView
                                    android:id="@+id/img"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="35dp"
                                    android:src="@drawable/add_a_photo_48px"/>
                            </androidx.cardview.widget.CardView>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/linear3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/rlv1"
                        android:layout_marginTop="20dp"
                        tools:ignore="MissingConstraints"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp">
                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Id Produk"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/grey2"
                            android:layout_marginVertical="5dp"
                            app:cardCornerRadius="10dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/idPrd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Masukan id"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="15sp"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="7dp"
                                android:background="@null"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/txt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama Produk"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/grey1"
                            android:layout_marginVertical="5dp"
                            app:cardCornerRadius="10dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/namaPrd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Masukan Nama"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="15sp"
                                android:inputType="text"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="7dp"
                                android:background="@null"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/txt4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kategori Produk"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/grey1"
                            android:layout_marginVertical="5dp"
                            app:cardCornerRadius="10dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/kategoriprd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Masukan Kategori"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="15sp"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="7dp"
                                android:background="@null"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/txt5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Stok Produk"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/grey1"
                            android:layout_marginVertical="5dp"
                            app:cardCornerRadius="10dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/stokPrd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:hint="Masukan Stok"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="15sp"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="7dp"
                                android:background="@null"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/txt6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Deskripsi"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/grey1"
                            android:layout_marginVertical="5dp"
                            app:cardCornerRadius="10dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/deskPrd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:hint="Masukan Deskripsi"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="15sp"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="7dp"
                                android:background="@null">
                            </com.google.android.material.textfield.TextInputEditText>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txt7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Harga"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/grey1"
                            android:layout_marginVertical="5dp"
                            app:cardCornerRadius="10dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hargaprd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:hint="Masukan Harga Produk"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="15sp"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="7dp"
                                android:background="@null"/>
                        </androidx.cardview.widget.CardView>
                        <Button
                            android:id="@+id/btn_spn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:allowClickWhenDisabled="true"
                            android:text="Simpan"
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_semibold"
                            android:background="@drawable/tombol_login"
                            android:layout_marginTop="25dp"
                            app:cardBackgroundColor="@color/green1"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="50dp"
                            android:layout_gravity="center">
                        </Button>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

</LinearLayout>