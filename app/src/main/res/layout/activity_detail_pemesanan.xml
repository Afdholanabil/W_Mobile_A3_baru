<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".DetailPemesananActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:ignore="MissingConstraints"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Kembali"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
            android:drawablePadding="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Transaksi"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp"
                android:gravity="right"
                android:textColor="@color/black"
                android:visibility="gone"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey1"
            android:layout_marginVertical="5dp"
            app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/txtIdTrans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Id Transaksi"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="7dp"
                android:background="@null"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Pembeli"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/txtDetailAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lihat"
                android:fontFamily="@font/poppins_regular"
                android:gravity="right"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kabupaten :"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/txt_kab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kabupaten"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kecamatan :"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/txt_kec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kecamatan"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desa :"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/txt_desa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="desa"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
        </LinearLayout>
<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/rcyAlamatPembeli"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            tools:listitem="@layout/recycleview_alamat_pbl">-->

<!--        </androidx.recyclerview.widget.RecyclerView>-->


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesan Pembeli :"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="17sp"
            android:layout_marginBottom="5dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <TextView
                android:id="@+id/txtPesanPembeli"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:padding="5dp"
                android:text="Tidak Ada Pesan"
                android:maxLines="2"
                android:fontFamily="@font/poppins_regular"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        >
        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcyInfoDetailPemesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/recycleview_info_detail_pemesanan">
        </androidx.recyclerview.widget.RecyclerView>
    </ScrollView>

</LinearLayout>
</LinearLayout>