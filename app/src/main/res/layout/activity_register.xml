<?xml version="1.0" encoding="utf-8"?>
<layout >
    <data>

    </data>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masuk"
                android:fontFamily="@font/poppins_bold"
                android:textSize="17dp"
                android:id="@+id/btn_back"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/Buat"
                tools:ignore="MissingConstraints"
                android:paddingTop="10dp"
                android:drawablePadding="3dp">
            </TextView>


            <androidx.cardview.widget.CardView
                android:id="@+id/Buat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf = "parent"
                android:layout_marginTop="100dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp"
                app:cardMaxElevation="20dp"
                tools:ignore="MissingConstraints"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Buat Akun mu Sekarang !"
                        android:textSize="25dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/Buat"
                app:cardCornerRadius="30dp"
                app:cardMaxElevation="20dp"
                app:cardBackgroundColor="@color/green1"
                tools:ignore="InvalidId">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="20dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/con1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        tools:ignore="MissingConstraints">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/crd6"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:backgroundTint="@color/grey1"
                            app:cardCornerRadius="50dp"
                            tools:ignore="MissingConstraints"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"

                            >
                            <ImageView
                                android:id="@+id/imgprofil"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="35dp"
                                android:src="@drawable/add_a_photo_48px"/>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/con1"
                        app:layout_constraintStart_toStartOf="@+id/crd1"
                        android:layout_marginBottom="20dp"
                        android:paddingLeft="10dp"
                        tools:ignore="MissingConstraints"
                        android:text="Nama Lengkap :"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingStart="20dp"
                        >

                    </TextView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/crd1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintWidth_percent="0.9"
                        tools:ignore="MissingConstraints"
                        app:layout_constraintTop_toBottomOf="@+id/text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:cardCornerRadius="15dp"
                        app:cardMaxElevation="20dp"
                        android:paddingLeft="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/inputText"
                            android:inputType="textPersonName"
                            app:layout_constraintTop_toBottomOf="@+id/text"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:paddingLeft="10dp"
                            app:boxBackgroundColor="@color/white"
                            tools:ignore="MissingClass"
                            android:background="@null"
                            android:hint="Masukan Nama Lengkap"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"

                            android:textSize="15dp">

                        </com.google.android.material.textfield.TextInputEditText>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/crd1"
                        app:layout_constraintStart_toStartOf="@+id/crd1"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Nomor Telepon :"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">

                    </TextView>
                    <LinearLayout
                        android:id="@+id/lnr2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/text2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="MissingConstraints">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/crd2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintWidth_percent="0.9"
                                tools:ignore="MissingConstraints"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:cardCornerRadius="15dp"
                                app:cardMaxElevation="20dp"
                                android:paddingLeft="10dp">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/inputText2"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:background="@null"
                                        android:fontFamily="@font/poppins_regular"
                                        android:hint="Masukan No.telp"
                                        android:inputType="phone"
                                        android:paddingStart="20dp"
                                        android:paddingLeft="10dp"
                                        android:paddingEnd="20dp"
                                        android:textSize="15dp"
                                        app:boxBackgroundColor="@color/white"
                                        app:counterEnabled="true"
                                        app:counterMaxLength="13"
                                        tools:ignore="MissingClass">

                                    </com.google.android.material.textfield.TextInputEditText>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.cardview.widget.CardView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/lnr2"
                        app:layout_constraintStart_toStartOf="@+id/crd3"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Username :"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">

                    </TextView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/crd3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        app:layout_constraintWidth_percent="0.9"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="15dp"
                        app:cardMaxElevation="20dp"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text3">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputText3"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@null"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Masukan Username"
                            android:inputType="textEmailAddress"
                            android:paddingStart="20dp"
                            android:paddingLeft="10dp"
                            android:paddingEnd="20dp"
                            android:textSize="15dp"
                            app:boxBackgroundColor="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/inputText2"
                            tools:ignore="MissingClass"
                            >

                        </com.google.android.material.textfield.TextInputEditText>

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/crd3"
                        app:layout_constraintStart_toStartOf="@+id/crd4"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Password :"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">

                    </TextView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/crd4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        app:layout_constraintWidth_percent="0.9"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="15dp"
                        app:cardMaxElevation="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text4">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:passwordToggleEnabled="true"
                            app:boxBackgroundColor="@color/white"
                            app:hintAnimationEnabled="false"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/inputText4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Masukan Password"

                                android:inputType="textPassword"
                                android:paddingStart="20dp"
                                android:paddingLeft="10dp"
                                android:paddingEnd="20dp"
                                android:paddingTop="15dp"
                                android:paddingBottom="13dp"
                                android:textSize="15dp"
                                app:boxBackgroundColor="@color/white"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/inputText4"
                                tools:ignore="MissingClass">

                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>


                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintWidth_percent="0.9"
                        app:layout_constraintTop_toBottomOf="@+id/crd4"
                        app:layout_constraintStart_toStartOf="@+id/crd5"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Konfirmasi Password :"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">

                    </TextView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/crd5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        app:layout_constraintWidth_percent="0.9"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="15dp"
                        app:cardMaxElevation="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text5"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:passwordToggleEnabled="true"
                            app:hintAnimationEnabled="false"
                            app:boxBackgroundColor="@color/white">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/inputText5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Masukan Lagi Password Anda"

                                android:inputType="textPassword"
                                android:paddingStart="20dp"
                                android:paddingLeft="10dp"
                                android:paddingEnd="20dp"
                                android:paddingTop="15dp"
                                android:paddingBottom="13dp"
                                android:textSize="15dp"
                                app:boxBackgroundColor="@color/white"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/inputText4"
                                tools:ignore="MissingClass"
                                >

                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>


                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf = "parent"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/cardview1"
                app:cardBackgroundColor="@color/green1"
                app:cardCornerRadius="15dp"
                app:cardMaxElevation="20dp"
                tools:ignore="MissingConstraints"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daftar"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textSize="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semibold"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah Punya Akun? Masuk"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/cardview2"
                tools:ignore="MissingConstraints"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>