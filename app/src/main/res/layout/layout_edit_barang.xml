<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:padding="20dp"
    android:id="@+id/layoutDialogContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp"
        android:paddingHorizontal="20dp"

        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/layoutDialogEdit"
        android:background="@drawable/dialog_background"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textJudul"
            android:padding="10dp"
            android:background="@drawable/action_background"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_semibold"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageIcon"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@+id/textJudul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textJudul"
            app:tint="@color/white" />
        <LinearLayout
            android:id="@+id/lnr1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/textJudul">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtId"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:text="Id Produk :"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                />

                <EditText
                    android:id="@+id/inputId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="17sp"
                    app:layout_constraintStart_toEndOf="@+id/textMessage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    >


                </EditText>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnr2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/lnr1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtNama"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:text="Nama Produk:"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <EditText
                android:id="@+id/inputNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/txtNama"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnr3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/lnr2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtStok"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:text="Stok Produk:"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <EditText
                android:id="@+id/inputStok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/textMessage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnr4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/lnr3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtHarga"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:text="Harga Produk :"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <EditText
                android:id="@+id/inputHarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/textMessage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnr5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/lnr4"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtDesk"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:text="Deskripsi :"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <EditText
                android:id="@+id/inputDesk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/textMessage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >
            </EditText>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/btnSimpan"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_action_background"
        app:layout_constraintBottom_toBottomOf="@+id/layoutDialogEdit"
        app:layout_constraintTop_toBottomOf="@+id/layoutDialogEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnKembali"
        android:textSize="14sp"
        android:textColor="@color/white"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/btnKembali"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/login_background"
        app:layout_constraintBottom_toBottomOf="@+id/layoutDialogEdit"
        app:layout_constraintTop_toBottomOf="@+id/layoutDialogEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSimpan"
        android:textSize="14sp"
        android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>