<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".PengaturanActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@color/grey2">
                    <ImageView
                        android:id="@+id/imgProfil"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/akun79"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Afdholanabil"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="20dp"/>
                    <TextView
                        android:id="@+id/txt_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="nabil123"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_marginHorizontal="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_pass"
                        android:visibility="invisible"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_role"
                        android:visibility="invisible"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:orientation="horizontal"
                android:layout_marginVertical="40dp"
                app:layout_constraintTop_toBottomOf="@id/linear1"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_editProfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green1"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="20dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_edit_24_white"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Proflil"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:orientation="horizontal"
                android:layout_marginVertical="15dp"
                app:layout_constraintTop_toBottomOf="@id/linear2"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnTambahData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green1"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="20dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_add_circle_24"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tambahkan Data"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:orientation="horizontal"
                android:layout_marginVertical="15dp"
                app:layout_constraintTop_toBottomOf="@id/linear3"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_kontak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green1"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="20dp"

                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_contacts_24"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kontak"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:orientation="horizontal"
                android:layout_marginVertical="15dp"
                app:layout_constraintTop_toBottomOf="@id/linear4"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnTambahKaryawan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green1"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="20dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_person_add_24"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tambahkan Akun Baru"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:orientation="horizontal"
                android:layout_marginVertical="15dp"
                app:layout_constraintTop_toBottomOf="@id/linear5"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnakunKaryawan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green1"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="20dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_supervisor_account_24"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txt_akunKaryawan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Akun Karyawan"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:orientation="horizontal"
                android:layout_marginVertical="15dp"
                app:layout_constraintTop_toBottomOf="@id/linear6"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green1"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="20dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_exit_to_app_24"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txt_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/nav_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_nav_bottom"
                app:itemIconTint="@color/white"
                app:itemRippleColor="@color/green3"
                app:itemTextColor="@color/white"
                app:menu="@menu/menu"
                app:labelVisibilityMode="unlabeled"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">
            </com.google.android.material.bottomnavigation.BottomNavigationView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>
