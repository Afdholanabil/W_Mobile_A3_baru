<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        tools:context=".editBarangActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/crd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_back_24" />

                    <TextView
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Kembali"
                        android:textColor="@color/black" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ScrollView
                android:id="@+id/aeb_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                tools:ignore="MissingConstraints">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="Edit Data Barang"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />

                    <RelativeLayout
                        android:id="@+id/rlv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt1"
                        tools:ignore="MissingConstraints">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/crd3"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:backgroundTint="@color/grey1"
                                app:cardCornerRadius="50dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="MissingConstraints">

                                <LinearLayout
                                    android:id="@+id/aeb_linear1"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:id="@+id/ed_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:padding="15dp"
                                        android:src="@drawable/ic_baseline_image_search_24" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/green1"
                                app:cardCornerRadius="10dp"
                                app:layout_constraintBottom_toBottomOf="@+id/crd3"
                                app:layout_constraintEnd_toEndOf="@+id/crd3"

                                >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="7dp"
                                    android:src="@drawable/ic_baseline_image_search_24" />
                            </androidx.cardview.widget.CardView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/linear3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        app:layout_constraintTop_toBottomOf="@+id/rlv1"
                        tools:ignore="MissingConstraints">

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Id Produk"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:backgroundTint="@color/grey2"
                            app:cardCornerRadius="10dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/inputId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:editable="false"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Id Produk"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="7dp"
                                android:textSize="15sp" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Nama Produk"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:backgroundTint="@color/grey1"
                            app:cardCornerRadius="10dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/inputNama"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Nama Produk"
                                android:maxLength="50"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="7dp"
                                android:textSize="15sp" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txt4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Jenis Produk"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:backgroundTint="@color/grey1"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/kategoriprd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:editable="false"
                                    android:fontFamily="@font/poppins_regular"

                                    android:hint="Masukan Kategori"
                                    android:paddingHorizontal="20dp"
                                    android:paddingVertical="7dp"
                                    android:textSize="15sp" />

                                <ImageView
                                    android:id="@+id/btnkategori"
                                    android:layout_width="50dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txt7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Harga Produk"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:backgroundTint="@color/grey1"
                            app:cardCornerRadius="10dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/inputHarga"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Harga Produk"
                                android:inputType="number"
                                android:maxLength="10"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="7dp"
                                android:textSize="15sp" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txt5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Stok Produk"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:backgroundTint="@color/grey1"
                            app:cardCornerRadius="10dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/inputStok"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Stok Produk"
                                android:inputType="number"
                                android:maxLength="10"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="7dp"
                                android:textSize="15sp" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txt6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Deskripsi "
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:backgroundTint="@color/grey1"
                            app:cardCornerRadius="10dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/inputDesk"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="Deskripsi Produk"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="7dp"
                                android:textSize="15sp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnSimpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="30dp"
                        android:backgroundTint="@color/green1"
                        app:cardCornerRadius="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linear3">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins_semibold"
                            android:paddingHorizontal="50dp"
                            android:paddingVertical="7dp"
                            android:text="Simpan"
                            android:textColor="@color/white"
                            android:textSize="15sp" />
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</layout>
